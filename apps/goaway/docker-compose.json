{
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "goaway",
      "isMain": true,
      "image": "pommee/goaway:0.51.1",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/settings.yaml",
          "containerPath": "/home/appuser/settings.yaml"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/home/appuser/"
        }
      ],
      "addPorts": [
        {
          "hostPort": "${DNS_PORT:-53}",
          "containerPort": 53,
          "tcp": true,
          "udp": true
        }
      ],
      "internalPort": 8080,
      "capAdd": [
        "NET_BIND_SERVICE",
        "NET_RAW"
      ]
    }
  ]
}